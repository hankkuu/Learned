doctype html
html
  head
    meta(charset='utf-8')
  body
    ul
      if user
        li
          a(href='/auth/logout') logout
      else
        li
          a(href='/auth/register') Register
        li
          a(href='/auth/login') Login
    h1
      a(href='/topic') Posts
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    block content
